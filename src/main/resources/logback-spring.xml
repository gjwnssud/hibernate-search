<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <property name="serviceLogFilePath" value="/app/hzn-framework/logs"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <springProfile name="local">
        <logger level="info" name="jdbc.sqltiming" additivity="false">
            <appender-ref ref="console"/>
        </logger>
        <logger level="info" name="jdbc.resultsettable" additivity="false">
            <appender-ref ref="console"/>
        </logger>
        <logger level="off" name="jdbc.audit" additivity="false">
            <appender-ref ref="console"/>
        </logger>
        <logger level="off" name="jdbc.sqlonly" additivity="false">
            <appender-ref ref="console"/>
        </logger>
        <logger level="off" name="jdbc.resultset" additivity="false">
            <appender-ref ref="console"/>
        </logger>
        <logger level="off" name="jdbc.connection" additivity="false">
            <appender-ref ref="console"/>
        </logger>
<!--        <logger level="trace" name="org.hibernate.orm.jdbc.bind" additivity="false">-->
<!--            <appender-ref ref="console"/>-->
<!--        </logger>-->
        <logger level="info" name="com.themoonenter.site" additivity="false">
            <appender-ref ref="console"/>
        </logger>

        <root level="info">
            <appender-ref ref="console"/>
        </root>
    </springProfile>

    <springProfile name="dev">
        <appender name="service" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <append>true</append>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!-- 로그 파일 경로 및 파일명 -->
                <fileNamePattern>${serviceLogFilePath}/service.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <!-- 용량 제한 -->
                <maxFileSize>10MB</maxFileSize>
                <!--  5일 지난 파일 삭제 -->
                <maxHistory>5</maxHistory>
            </rollingPolicy>
            <encoder>
                <charset>UTF-8</charset>
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <logger level="info" name="com.hzn.framework" additivity="false">
            <appender-ref ref="service"/>
            <appender-ref ref="console"/>
        </logger>

        <root level="error">
            <appender-ref ref="service"/>
            <appender-ref ref="console"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <appender name="service" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <append>true</append>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!-- 로그 파일 경로 및 파일명 -->
                <fileNamePattern>${serviceLogFilePath}/service.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <!-- 용량 제한 -->
                <maxFileSize>10MB</maxFileSize>
                <!--  365일 지난 파일 삭제 -->
                <maxHistory>365</maxHistory>
            </rollingPolicy>
            <encoder>
                <charset>UTF-8</charset>
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <logger level="info" name="com.hzn.framework" additivity="false">
            <appender-ref ref="service"/>
            <appender-ref ref="console"/>
        </logger>

        <root level="error">
            <appender-ref ref="service"/>
            <appender-ref ref="console"/>
        </root>
    </springProfile>
</configuration>
